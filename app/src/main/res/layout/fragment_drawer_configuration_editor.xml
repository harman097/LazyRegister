<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brent.harman.lazyregister.DrawerViewFragment"
    android:background="@color/Background"
    android:clickable="true"
    android:id="@+id/layout_draggablesMasterParent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Drawer View Fragment"
        android:id="@+id/tvDrawerConfigEditorBackground"
        android:singleLine="false"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#44aadd"
        android:textStyle="bold"
        android:textSize="60dp"
        android:alpha=".3" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layout_configeditorbins"></LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layout_draggablePath"></RelativeLayout>

</RelativeLayout>
